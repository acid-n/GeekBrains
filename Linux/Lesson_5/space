#!/bin/bash

#Написать скрипт, который удаляет из текстового файла пустые строки и заменяет маленькие символы на большие (воспользуйтесь tr или sed).
#Скрипт должен выводить информацию о том, как его использовать.


if [ $# != 1 ]
then
			echo Формат использования
			echo $0 arg1 - аргументом выступает текстовый файл
			exit 1
else
			echo Все хорошо, продолжаем
			sed '/^$/d' $1 | tr '[:lower:]' '[:upper:]' > out.txt
fi
